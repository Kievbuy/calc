<h1>Депозитний калькулятор</h1>
<hr>

<% unless @params.empty? %>
  <%= @params %>
<% end %>

<%#= settings.currencies.to_s %>

<form action="/" method="POST">
  <div class="form-group">
    <label for="currency">Валюта</label>
    <select name="currency" class="form-control" id="exampleFormControlSelect1" required>
      <% settings.currencies.each_with_index do |currency, index| %>
        <option value="<%= currency[:code] %>"><%= currency[:title] %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="deposit">Сума внеску</label>
    <input name='deposit' type="number" class="form-control" id="deposit" placeholder="Сума внеску" value='1000' required>
  </div>
  <div class="form-group">
    <label for="annual_rate">Річна ставка</label>
    <input name='annual_rate' type="number" class="form-control" id="annual_rate" placeholder="Річна ставка" value='10'>
  </div>
    <div class="form-group">
    <label for="date">Дата внеску</label>
    <input name='date' type="date" class="form-control" id="date" value="<%= Date.today %>">
  </div>
  <button type="submit" class="btn btn-primary">Розрахувати</button>
</form>